# ====================
# IDEXX Sync Service Environment Variables
# ====================
# Copy this file to .env.local and fill in your values
# .env.local is gitignored and should never be committed

# --------------------
# Node Environment
# --------------------
NODE_ENV=development
APP_ENV=development

# --------------------
# Supabase Configuration
# --------------------
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# --------------------
# IDEXX Neo Configuration
# --------------------
# Encryption key for storing IDEXX credentials (min 32 characters)
IDEXX_ENCRYPTION_KEY=your-32-character-encryption-key-here

# --------------------
# Server Configuration
# --------------------
PORT=3001
HOST=localhost

# --------------------
# Logging
# --------------------
LOG_LEVEL=info

# --------------------
# Chrome/Playwright Configuration
# --------------------
# Path to Chrome executable (optional - auto-detected if not set)
# CHROME_PATH=/Applications/Google Chrome.app/Contents/MacOS/Google Chrome

# Headless mode (true for production, false for debugging)
HEADLESS=true

# --------------------
# Sync Configuration
# --------------------
# How often to sync data (in minutes)
SYNC_INTERVAL_MINUTES=15

# Maximum concurrent sync jobs
MAX_CONCURRENT_SYNCS=3

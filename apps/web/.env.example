# ====================
# Web App Environment Variables
# ====================
# Copy this file to .env.local and fill in your values
# .env.local is gitignored and should never be committed

# --------------------
# Node Environment
# --------------------
NODE_ENV=development
APP_ENV=development

# --------------------
# Supabase Configuration
# --------------------
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# --------------------
# Clerk Authentication (Optional)
# --------------------
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxxxx
CLERK_SECRET_KEY=sk_test_xxxxx
CLERK_WEBHOOK_SECRET=whsec_xxxxx
CLERK_DOMAIN=your-app.clerk.accounts.dev

# --------------------
# AI Configuration
# --------------------
ANTHROPIC_API_KEY=sk-ant-xxxxx

# --------------------
# VAPI Voice AI
# --------------------
VAPI_PRIVATE_KEY=xxxxx
VAPI_ASSISTANT_ID=xxxxx
VAPI_PHONE_NUMBER_ID=xxxxx
VAPI_WEBHOOK_SECRET=xxxxx
VAPI_DEFAULT_INBOUND_ASSISTANT_ID=xxxxx

# --------------------
# Email (Resend)
# --------------------
RESEND_API_KEY=re_xxxxx

# --------------------
# IDEXX Integration
# --------------------
IDEXX_ENCRYPTION_KEY=your-32-character-encryption-key-here

# --------------------
# Slack Integration (Optional)
# --------------------
SLACK_CLIENT_ID=xxxxx
SLACK_CLIENT_SECRET=xxxxx
SLACK_SIGNING_SECRET=xxxxx

# --------------------
# Analytics (PostHog)
# --------------------
NEXT_PUBLIC_POSTHOG_KEY=phc_xxxxx
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# --------------------
# Site Configuration
# --------------------
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# --------------------
# Optional: Skip Validation
# --------------------
# SKIP_ENV_VALIDATION=true

{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "plugins": [{ "name": "next" }],
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.js",
    ".next/types/**/*.ts",
    "../../libs/**/*.ts",
    "../../libs/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "coverage/**",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/__tests__/**",
    "src/test/**/*",
    "vitest.config.ts",
    "../../libs/testing/**/*",
    "../../libs/**/*.test.ts",
    "../../libs/**/*.test.tsx",
    "../../libs/**/__tests__/**",
    "../../libs/extension-storage/**/*",
    "../../libs/extension-shared/**/*",
    "../../libs/extension-env/**/*",
    "../../libs/ui/src/extension/**/*",
    "../../libs/mobile/**/*"
  ]
}

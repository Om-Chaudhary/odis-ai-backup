{
  "name": "chrome-extension",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/chrome-extension/src",
  "projectType": "application",
  "tags": ["type:app", "scope:extension", "platform:browser"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "pnpm exec vite build --config apps/chrome-extension/vite.config.ts"
        ],
        "cwd": "{workspaceRoot}"
      },
      "outputs": ["{workspaceRoot}/dist/apps/chrome-extension"],
      "cache": true,
      "inputs": ["production", "^production"],
      "dependsOn": ["build-content-ui"]
    },
    "build-content-ui": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx apps/chrome-extension/scripts/build-content-ui.mts",
        "cwd": "{workspaceRoot}"
      },
      "outputs": ["{workspaceRoot}/dist/apps/chrome-extension/content-ui"],
      "cache": true
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "pnpm exec vite build --config apps/chrome-extension/vite.config.ts --watch --mode development",
            "forwardAllArgs": false
          }
        ],
        "cwd": "{workspaceRoot}",
        "parallel": true
      },
      "dependsOn": ["build-content-ui"]
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit -p apps/chrome-extension/tsconfig.json",
        "cwd": "{workspaceRoot}"
      },
      "cache": true,
      "inputs": ["default", "^default"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/chrome-extension/**/*.{ts,tsx}"],
        "eslintConfig": "apps/chrome-extension/eslint.config.mjs"
      }
    },
    "test": {
      "executor": "@nx/vitest:test",
      "outputs": ["{workspaceRoot}/coverage/apps/chrome-extension"],
      "options": {
        "configFile": "apps/chrome-extension/vitest.config.ts",
        "passWithNoTests": true
      }
    },
    "zip": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx apps/chrome-extension/scripts/zip.mts",
        "cwd": "{workspaceRoot}"
      },
      "dependsOn": ["build"]
    }
  }
}

{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable", "WebWorker"],
    "jsx": "react-jsx",
    "types": ["chrome", "vite/client", "node"],
    "noEmit": true,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "manifest.ts",
    "plugins/**/*",
    "scripts/**/*",
    "vite.config.ts",
    "tailwind.config.ts"
  ],
  "exclude": ["node_modules", "dist"]
}

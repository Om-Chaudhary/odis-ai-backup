{
  "name": "pims-sync",
  "version": "2.0.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "start": "dotenv -e ../../.env.local -- env PORT=5051 node ../../dist/apps/pims-sync/main.js",
    "start:visible": "dotenv -e ../../.env.local -- env PORT=5051 HEADLESS=false node ../../dist/apps/pims-sync/main.js",
    "start:local": "dotenv -e .env -- node ../../dist/apps/pims-sync/main.js",
    "start:local:visible": "dotenv -e .env -- env HEADLESS=false node ../../dist/apps/pims-sync/main.js",
    "dev:visible": "dotenv -e ../../.env.local -- env PORT=5051 HEADLESS=false tsx src/main.ts",
    "dev:local:visible": "dotenv -e .env -- env HEADLESS=false tsx src/main.ts",
    "cli": "dotenv -e ../../.env.local -- tsx src/cli-runner.mjs",
    "cli:local": "dotenv -e .env -- tsx src/cli-runner.mjs",
    "debug:auth": "dotenv -e .env -- tsx src/debug-auth.ts"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.5.1",
    "chalk": "^4.1.2",
    "cli-progress": "^3.12.0",
    "cli-table3": "^0.6.5",
    "eventsource": "^2.0.2",
    "express": "^4.22.1",
    "figlet": "^1.8.0",
    "log-update": "^4.0.0",
    "node-cron": "^3.0.3",
    "ora": "^5.4.1",
    "p-limit": "^6.1.0",
    "playwright": "^1.57.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.6",
    "@types/figlet": "^1.7.0",
    "@types/node-cron": "^3.0.11",
    "dotenv-cli": "^8.0.0",
    "tsx": "^4.19.0"
  }
}

{
  "name": "shared-validators",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/shared/validators/src",
  "projectType": "library",
  "tags": [
    "type:util",
    "scope:shared",
    "platform:neutral"
  ],
  "targets": {
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run",
        "cwd": "libs/shared/validators"
      },
      "cache": true,
      "inputs": [
        "default",
        "^default",
        "{workspaceRoot}/libs/validators/vitest.config.ts"
      ]
    },
    "test:watch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest watch",
        "cwd": "libs/shared/validators"
      }
    },
    "test:coverage": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run --coverage",
        "cwd": "libs/shared/validators"
      },
      "cache": true,
      "inputs": [
        "default",
        "^default",
        "{workspaceRoot}/libs/validators/vitest.config.ts"
      ]
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit -p tsconfig.json",
        "cwd": "libs/shared/validators"
      },
      "cache": true,
      "inputs": [
        "default",
        "^default"
      ]
    }
  }
}

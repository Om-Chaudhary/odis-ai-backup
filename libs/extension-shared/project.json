{
  "name": "extension-shared",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/extension-shared/src",
  "projectType": "library",
  "tags": ["type:util", "scope:extension", "platform:browser"],
  "targets": {
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit -p libs/extension-shared/tsconfig.json",
        "cwd": "{workspaceRoot}"
      },
      "cache": true
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/extension-shared/**/*.{ts,tsx}"]
      }
    }
  }
}

{
  "name": "integrations-slack",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/integrations/slack/src",
  "projectType": "library",
  "tags": [
    "type:integration",
    "scope:server",
    "platform:node"
  ],
  "targets": {
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run",
        "cwd": "libs/integrations/slack"
      },
      "cache": true,
      "inputs": [
        "default",
        "^default",
        "{workspaceRoot}/libs/slack/vitest.config.ts"
      ]
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit -p tsconfig.json",
        "cwd": "libs/integrations/slack"
      },
      "cache": true,
      "inputs": [
        "default",
        "^default"
      ]
    }
  }
}

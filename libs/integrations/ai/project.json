{
  "name": "integrations-ai",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/integrations/ai/src",
  "projectType": "library",
  "tags": ["type:integration", "scope:server", "platform:node"],
  "targets": {
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run",
        "cwd": "libs/integrations/ai"
      },
      "cache": true,
      "inputs": [
        "default",
        "^default",
        "{workspaceRoot}/libs/integrations/ai/vitest.config.ts"
      ]
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit -p tsconfig.json",
        "cwd": "libs/integrations/ai"
      },
      "cache": true,
      "inputs": ["default", "^default"]
    }
  }
}
